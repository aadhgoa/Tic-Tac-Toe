MDFloatLayout:

    MDLabel:
        id: start
        font_size: "25sp"
        text: "WHO GOES FIRST?"
        halign: "center"
        pos_hint: {"center_y": .9}
    
    MDGridLayout:
        size_hint: .1, .1
        pos_hint: {'center_x': .5,'center_y': .8}
        cols:2
        rows: 1

        Button:
            id: btnx
            text:"X"
            font_size: "30sp"
            on_release: app.start_game(btnx)
        Button:
            id: btno
            text:"O"
            font_size: "30sp"
            on_release: app.start_game(btno)

    MDGridLayout:
        size_hint: .5, .5
        pos_hint: {'center_x': .5,'center_y': .4}
        cols:3
        rows: 3

        Button:
            id: btn1
            text: ""
            font_size: "45sp"
            on_release: app.presser(btn1)
        
        Button:
            id: btn2
            text: ""
            font_size: "45sp"
            on_release: app.presser(btn2)

        Button:
            id: btn3
            text: ""
            font_size: "45sp"
            on_release: app.presser(btn3)

        Button:
            id: btn4
            text: ""
            font_size: "45sp"
            on_release: app.presser(btn4)

        Button:
            id: btn5
            text: ""
