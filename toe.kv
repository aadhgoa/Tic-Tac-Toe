        Button:
            id: btn9
            text: ""
            font_size: "45sp"
            on_release: app.presser(btn9)
            
    MDLabel:
        id: score
        font_size: "32sp"
        text: ""
        halign: "center"
        pos_hint: {"center_y": .1}

    MDRaisedButton:
        id: restart
        text: "Restart The Game"
        pos_hint: {'center_x': .5, 'center_y': .02}
        on_release: app.restart()
        